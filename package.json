{
  "name": "larry",
  "displayName": "Larry",
  "description": "Browse Docs in VS Code",
  "version": "0.0.1",
  "publisher": "WilsonVanNice",
  "repository": {
    "type": "git",
    "url": "https://github.com/van-nice/larry.git"
  },
  "icon": "icons/larry-icon.png",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Larry",
      "properties": {
        "larry.webviewTimeout": {
          "type": "number",
          "default": 5000,
          "description": "Timeout in milliseconds before showing the 'Open in browser' option when a site fails to load in the webview"
        }
      }
    },
    "commands": [
      {
        "command": "larry.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "larry.saveSite",
        "title": "Larry: Save Site"
      },
      {
        "command": "larry.removeSavedSite",
        "title": "Remove",
        "icon": "$(trash)"
      },
      {
        "command": "larry.addFolder",
        "title": "New Folder",
        "icon": "$(new-folder)"
      },
      {
        "command": "larry.addSite",
        "title": "New Site",
        "icon": "$(add)"
      },
      {
        "command": "larry.rename",
        "title": "Rename",
        "icon": "$(edit)"
      },
      {
        "command": "larry.openSite",
        "title": "Open Site"
      },
      {
        "command": "larry.openInBrowser",
        "title": "Open in Browser",
        "icon": "$(globe)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "larry-container",
          "title": "Larry",
          "icon": "icons/larry-light.svg"
        }
      ]
    },
    "views": {
      "larry-container": [
        {
          "id": "savedSites",
          "name": "Saved Sites"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "larry.addSite",
          "when": "view == savedSites",
          "group": "navigation"
        },
        {
          "command": "larry.addFolder",
          "when": "view == savedSites",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "larry.openSite",
          "when": "view == savedSites && viewItem == site",
          "group": "inline"
        },
        {
          "command": "larry.openInBrowser",
          "when": "view == savedSites && viewItem == site",
          "group": "inline"
        },
        {
          "command": "larry.rename",
          "when": "view == savedSites",
          "group": "1_modification"
        },
        {
          "command": "larry.removeSavedSite",
          "when": "view == savedSites",
          "group": "1_modification"
        },
        {
          "command": "larry.addSite",
          "when": "view == savedSites && viewItem == folder",
          "group": "2_create"
        },
        {
          "command": "larry.addFolder",
          "when": "view == savedSites && viewItem == folder",
          "group": "2_create"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.25.1",
    "eslint": "^9.23.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.2"
  }
}
